!component '../components/Badge.wire' as Badge
!component '../components/Card.wire' as Card
!component '../components/Button.wire' as Button
!component '../components/Alert.wire' as Alert
!component '../components/test_inject.wire' as TestInject

!provide { 'COUNT': count }

count = 0

---html---
<div>
    <h1>Component Test</h1>
    
    <Badge label="New" type="primary" />
    <Badge label="Old" type="secondary">
        (Refurbished)
    </Badge>

    <Button @click={count += 1}>Count: {count}</Button>
    <hr />
    <TestInject></TestInject>
    
    <hr />

    <Alert title="Information">This is an informational alert.</Alert>

    <hr />
    
    <Card>
        <slot name="header">Card Header</slot>
        Card Body Content
    </Card>
</div>
